    "version": "0.2.0",
    
    "configurations": [
        {
            "request": "launch",
            "name": "Run agent",
            "type": "node",
            "program": "${workspaceFolder}/agent/src/un.log-agent.js",
            "cwd": "${workspaceFolder}/agent/src",
            "env": {},
            "runtimeExecutable": "/home/frida/.deno/bin/deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-env",
                "--allow-net",
                "--allow-read=./data",
                "--allow-read=./config.json",
                "--allow-write=./log",
                "--allow-write=/media/common/code/full_stack/un.log-collect-and-view/server/src/data/",
                "--allow-run=journalctl,echo",
                "--allow-sys=hostname"
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Run server",
            "type": "node",
            "program": "${workspaceFolder}/server/src/un.log-server.ts",
            "cwd": "${workspaceFolder}/server/src",
            "env": {},
            "runtimeExecutable": "/home/frida/.deno/bin/deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-net",
                "--allow-read=./data",
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Run client",
            "type": "node",
            "program": "${workspaceFolder}/client/src/un.log-client.js",
            "cwd": "${workspaceFolder}/client/src",
            "env": {},
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "wds",
                "serve"
            ],
            "attachSimplePort": 9229
        },
    ]
}